{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "out",
    "strict": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "target": "es2017",
    "types": []
  },

  "include": ["./package.json", "src/**/*"]
}
